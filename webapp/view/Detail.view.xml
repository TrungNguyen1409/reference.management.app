<mvc:View
    controllerName="reference.management.app.controller.Detail"
    displayBlock="true"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
>
    <Page
        title="{title}"
        showNavButton="true"
        navButtonPress=".onNavBack"
    >
        <Panel>
            <ObjectHeader
                title="{title}"
                responsive="true"
            >
                <attributes>
                    <ObjectAttribute
                        title="{i18n>type}"
                        text="{type}"
                    />
                    <ObjectAttribute
                        title="{i18n>title}"
                        text="{title}"
                    />
                    <ObjectAttribute
                        title="{i18n>authors}"
                        text="{authors}"
                    />
                    <ObjectAttribute
                        title="{i18n>publication_date}"
                        text="{publication_date}"
                    />
                    <ObjectAttribute
                        title="{i18n>journal}"
                        text="{journal}"
                    />
                    <ObjectAttribute
                        title="{i18n>volume}"
                        text="{volume}"
                    />
                    <ObjectAttribute
                        title="{i18n>issue}"
                        text="{issue}"
                    />
                    <ObjectAttribute
                        title="{i18n>pages}"
                        text="{pages}"
                    />
                    <ObjectAttribute
                        title="{i18n>doi}"
                        text="{doi}"
                    />
                    <ObjectAttribute
                        title="{i18n>abstract}"
                        text="{abstract}"
                    />
                    <ObjectAttribute
                        title="{i18n>keywords}"
                        text="{keywords}"
                    />
                </attributes>
            </ObjectHeader>
        </Panel>
    </Page>
</mvc:View>
