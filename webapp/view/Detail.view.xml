<mvc:View
    controllerName="reference.management.app.controller.Detail"
    displayBlock="true"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
>
    <Page
        title="{i18n>detailPageTitle}"
        showNavButton="true"
        navButtonPress=".onNavBack"
    >
        <Panel>
            <ObjectHeader
                title="{firstName} {lastName}"
                responsive="true"
            >
                <attributes>
                    <ObjectAttribute
                        title="{i18n>firstName}"
                        text="{firstName}"
                    />
                    <ObjectAttribute
                        title="{i18n>lastName}"
                        text="{lastName}"
                    />
                    <ObjectAttribute
                        title="{i18n>street}"
                        text="{street}"
                    />
                    <ObjectAttribute
                        title="{i18n>number}"
                        text="{number}"
                    />
                    <ObjectAttribute
                        title="{i18n>zip}"
                        text="{zip}"
                    />
                    <ObjectAttribute
                        title="{i18n>city}"
                        text="{city}"
                    />
                    <ObjectAttribute
                        title="{i18n>country}"
                        text="{country}"
                    />
                    <ObjectAttribute
                        title="{i18n>email}"
                        text="{email}"
                    />
                    <ObjectAttribute
                        title="{i18n>phone}"
                        text="{phone}"
                    />
                </attributes>
            </ObjectHeader>
        </Panel>
        <Panel class="sapUiResposiveMargin" width="auto" expanded="true" expandable="true">
            <Table
                id="ordersTable"
                headerText="{i18n>orders}"
                items="{_orders}"
            >
                <columns>
                    <Column>
                        <header>
                            <Text text="{i18n>orderId}" />
                        </header>
                    </Column>
                    <Column>
                        <header>
                            <Text text="{i18n>amount}" />
                        </header>
                    </Column>
                    <Column>
                        <header>
                            <Text text="{i18n>currency}" />
                        </header>
                    </Column>
                </columns>
                <items>
                    <ColumnListItem>
                        <cells>
                            <Text text="{orderId}" />
                            <Text text="{totalAmount}" />
                            <Text text="{currency}" />
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </Panel>
    </Page>
</mvc:View>
